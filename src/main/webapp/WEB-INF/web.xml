<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Controllers-->
    <servlet>
        <servlet-name>worktimeController</servlet-name>
        <servlet-class>ru.gsmirnov.controller.WorktimeController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>worktimeController</servlet-name>
        <url-pattern>/worktime</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>startController</servlet-name>
        <servlet-class>ru.gsmirnov.controller.StartController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>startController</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>finishController</servlet-name>
        <servlet-class>ru.gsmirnov.controller.StopController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>finishController</servlet-name>
        <url-pattern>/finish</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>clearController</servlet-name>
        <servlet-class>ru.gsmirnov.controller.ClearController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>clearController</servlet-name>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tableController</servlet-name>
        <servlet-class>ru.gsmirnov.controller.TableController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>tableController</servlet-name>
        <url-pattern>/table</url-pattern>
    </servlet-mapping>
</web-app>